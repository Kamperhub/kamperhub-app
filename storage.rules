
rules_version = '2';

// These rules control access to Firebase Cloud Storage.
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow an authenticated user to read, write, and delete files
    // within their own user-specific folder. This is useful for features
    // like uploading profile pictures or other user-specific files.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // By default, deny access to all other paths to ensure security.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
