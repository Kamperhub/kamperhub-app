rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files within the Kamperhub Media folder.
    // This is necessary for logos, banners, etc., to display on the public website.
    match /Kamperhub Media/{allPaths=**} {
      allow read;
    }

    // Secure all other paths. This is a placeholder for user-specific uploads.
    // By default, no one can read or write to other paths.
    // You would add user-specific rules here later, e.g.:
    // match /users/{userId}/{allPaths=**} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
