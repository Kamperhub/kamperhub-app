rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rule 1: Allow public read access to the Kamperhub Media folder
    match /Kamperhub Media/{allPaths=**} {
      allow read;
      allow write: if false; // Explicitly deny writes
    }

    // Rule 2: Secure user-specific files
    // Only the authenticated user can read/write their own files.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule 3: Deny all other access
    // This is a catch-all to ensure any path not explicitly matched above is denied.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
