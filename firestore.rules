rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile and all of its sub-collections.
    // This is the fundamental security rule for a multi-user application.
    // It ensures that a user can only ever access documents under /users/{their_own_id}.
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Explicitly deny access to the oauthStates collection from the client-side.
    // Only the server (using Admin SDK) should access this.
    match /oauthStates/{state} {
        allow read, write: if false;
    }
  }
}
