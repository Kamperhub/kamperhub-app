
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to access only their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow admins to access any user's data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.token.email == 'info@kamperhub.com';
    }

    // Allow creation of oauth state documents by anyone (for Google Sign In)
    match /oauthStates/{state} {
      allow create, read, delete: if true;
    }
  }
}
