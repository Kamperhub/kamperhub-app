rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the requesting user is an admin
    function isAdmin() {
      return request.auth.token.email == 'info@kamperhub.com';
    }

    // Users can only access their own data, but admins can access anything.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }
    
    // Allow unauthenticated users to create state documents for Google Sign-In
    match /oauthStates/{stateId} {
        allow create;
        allow read, delete: if false;
    }
  }
}
