
rules_version = '2';

// These rules are for client-side access control.
// The Firebase Admin SDK used on the server bypasses these rules.
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow an authenticated user to read and write to all documents
    // within their own user-specific collection.
    // This is how the app securely fetches and updates data for the logged-in user.
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny all other reads/writes to prevent unauthorized access.
    // This is the default secure posture.
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
