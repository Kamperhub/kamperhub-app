rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows an authenticated user to read and write to their own
    // user profile document and ANY documents in ANY subcollections
    // underneath it (e.g., trips, vehicles, etc.).
    // This is the primary security rule for the application's data model.
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
