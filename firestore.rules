
rules_version = '2';

service cloud.firestore {
  match /databases/kamperhubv2/documents {
    // Users can only read and write their own documents.
    // The {document=**} wildcard matches any document in any subcollection.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Authenticated users need to be able to create and check OAuth states for Google Tasks integration
    match /oauthStates/{state} {
      allow read, create, delete: if request.auth != null;
    }
  }
}
